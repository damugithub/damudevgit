					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": {
							"value": "SELECT\t*\nFROM\t[UCM].[CT_ETL_task_control_G]\nWHERE\tTask_Phase in ('Dim_Extract') AND \n(\nModule_Name = '@{pipeline().parameters.ModuleName}' OR\nModule_Name = 'CD' OR\n'@{pipeline().parameters.ModuleName}' = 'All'\n)",
							"type": "Expression"
						},
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "DS_UCM_SQL_AzureSQL_DBTables",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			},
