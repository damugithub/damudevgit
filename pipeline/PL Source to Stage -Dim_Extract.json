{
	"name": "PL Source to Stage -Dim_Extract",
	"properties": {
		"activities": [
			{
				"name": "Lookup_TaskControl_SourceToStage_Records",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
